<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context=".Play"
    android:background="@mipmap/bg_altp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="$"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/mlogo" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:id="@+id/linearLayout"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3"
        android:gravity="center"
        android:layout_marginBottom="15dp">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageButton"
            android:background="@drawable/fifty_press"
            android:layout_alignTop="@+id/imageButton2"
            android:layout_toLeftOf="@+id/imageView"
            android:layout_toStartOf="@+id/imageView"
            android:onClick="fifty"
            android:layout_marginLeft="0dp" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageButton2"
            android:background="@drawable/call_press"
            android:layout_gravity="center"
            android:layout_below="@+id/imageView"
            android:layout_alignLeft="@+id/imageView"
            android:layout_alignStart="@+id/imageView"
            android:onClick="call"
            android:layout_marginLeft="7dp" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageButton3"
            android:background="@drawable/khangia_press"
            android:layout_gravity="center"
            android:layout_below="@+id/imageView"
            android:layout_toLeftOf="@+id/imageButton4"
            android:layout_toStartOf="@+id/imageButton4"
            android:onClick="khangia"
            android:layout_marginLeft="7dp" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageButton4"
            android:background="@drawable/switch_press"
            android:layout_gravity="center"
            android:layout_below="@+id/imageView"
            android:layout_toLeftOf="@+id/textView3"
            android:layout_toStartOf="@+id/textView3"
            android:onClick="changeQuestion"
            android:layout_marginLeft="7dp" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageButton13"
            android:background="@drawable/pause_press"
            android:onClick="pause"
            android:layout_marginLeft="7dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Câu hỏi số"
            android:id="@+id/textView4"
            android:layout_gravity="center_horizontal"
            android:textSize="24dp"
            android:textStyle="bold"
            android:typeface="serif"
            android:layout_marginBottom="5dp" />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="59dp"
            android:id="@+id/scrollView2"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView5"
                android:layout_gravity="center_horizontal"

                android:textSize="16dp"
                android:text="fdshfdsfds"
                android:textAlignment="center" />
        </ScrollView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/buttonA"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_press"
            android:textAllCaps="false"
            android:textSize="17dp"
            android:onClick="onClick"
            android:text="ffsdfdsfd"
            android:gravity="left|center_vertical|center_horizontal" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/buttonB"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_press"
            android:textAllCaps="false"
            android:textSize="17dp"
            android:onClick="onClick"
            android:gravity="left|center_vertical|center_horizontal" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/buttonC"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_press"
            android:textAllCaps="false"
            android:textSize="17dp"
            android:onClick="onClick"
            android:gravity="left|center_vertical|center_horizontal" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/buttonD"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_press"
            android:textAllCaps="false"
            android:textSize="17dp"
            android:onClick="onClick"
            android:gravity="left|center_vertical|center_horizontal" />

    </LinearLayout>
</RelativeLayout>